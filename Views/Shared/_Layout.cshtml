@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bevo's Tunes</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                 

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Customer"))
                        {

                            <li>
                                <a asp-controller="Orders" asp-action="Index" class="nav-link">Orders</a>
                            </li>
                            <li>
                                <a asp-controller="Account" asp-action="Index" class="nav-link">Account Information</a>
                            </li>
                            <li>
                                <a asp-controller="Orders" asp-action="MyMusic" class="nav-link">My Music</a>
                            </li>
                        }
                     }

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Employee"))
                        {

                            <li>
                                <a asp-controller="RoleAdmin" asp-action="Index" class="nav-link">Manage Customers</a>
                            </li>
                            <li>
                                <a asp-controller="Account" asp-action="Index" class="nav-link">Account Information</a>
                            </li>

                            <li>
                                <a asp-controller="ArtistReviews" asp-action="Edit" class="nav-link">Edit Artist Reviews</a>
                            </li>

                            <li>
                                <a asp-controller="AlbumReviews" asp-action="Edit" class="nav-link">Edit Album Reviews</a>
                            </li>
                            <li>
                                <a asp-controller="SongReviews" asp-action="Edit" class="nav-link">Edit Song Reviews</a>
                            </li>
                        }}

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Manager"))
                        {
                            <li>
                                <a asp-controller="RoleAdmin" asp-action="Index" class="nav-link">Manage Customers and Employees</a>
                            </li>
                            <li>
                                <a asp-controller="Account" asp-action="Index" class="nav-link">Account Information</a>
                            </li>

                            <li>
                                <a asp-controller="ArtistReviews" asp-action="Edit" class="nav-link">Edit Artist Reviews</a>
                            </li>

                            <li>
                                <a asp-controller="AlbumReviews" asp-action="Edit" class="nav-link">Edit Album Reviews</a>
                            </li>
                            <li>
                                <a asp-controller="SongReviews" asp-action="Edit" class="nav-link">Edit Song Reviews</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Index" class="nav-link">Edit Home Page</a>
                            </li>
                            <li>
                                <a asp-controller="Songs" asp-action="Edit" class="nav-link">Edit Song Price</a>
                            </li>
                            <li>
                                <a asp-controller="Songs" asp-action="Edit" class="nav-link">Add Songs</a>
                            </li>
                            <li>
                                <a asp-controller="Orders" asp-action="Details" class="nav-link">Sales Reports</a>
                            </li>


                        }}
                </ul>
            </div>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/popper.js/popper.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

</body>
</html>













